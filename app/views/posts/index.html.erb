<div>
  <h1 class="font-bold text-4xl">Posts#index</h1>
  <div class="user-profile">
    <p><%= current_user.handle_name %></p>
  </div>
  <% @posts.each do |post| %>
    <div class="post-card" style="padding:20px;">
      <p><%= post.user.handle_name %></p>
      <p><%= post.body %></p>
    </div>
  <% end %>
</div>
